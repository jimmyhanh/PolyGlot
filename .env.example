# PolyGlot Configuration

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# Supported Languages Configuration
# You can modify these to add or remove languages
SUPPORTED_LANGUAGES=en,vi,ja,de,zh

# Language Names (for display)
LANGUAGE_NAMES_EN=English
LANGUAGE_NAMES_VI=Vietnamese  
LANGUAGE_NAMES_JA=Japanese
LANGUAGE_NAMES_DE=German
LANGUAGE_NAMES_ZH=Chinese

# Voice Recognition Language Codes
VOICE_LANG_EN=en-US
VOICE_LANG_VI=vi-VN
VOICE_LANG_JA=ja-JP
VOICE_LANG_DE=de-DE
VOICE_LANG_ZH=zh-CN

# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.3

# Application Settings
APP_NAME=PolyGlot
APP_VERSION=1.0.0
MAX_HISTORY_ITEMS=20
LIVE_TRANSLATE_DELAY=1000

# API Endpoints
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Cache Settings
CACHE_NAME=polyglot-v1.0.0
CACHE_DURATION=86400000

# Feature Flags
ENABLE_VOICE_INPUT=true
ENABLE_TEXT_TO_SPEECH=true
ENABLE_LIVE_TRANSLATION=true
ENABLE_HISTORY=true
ENABLE_OFFLINE_MODE=true